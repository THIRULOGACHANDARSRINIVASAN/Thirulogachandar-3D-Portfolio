1ï¸âƒ£ RocketToast component
import { motion } from "framer-motion";

export default function RocketToast({ message, duration = 5000 }) {
  return (
    <motion.div
      className="fixed top-6 right-0 z-50 flex items-center"
      initial={{ x: "100vw", y: -20 }}
      animate={{ x: "-120vw" }}
      transition={{
        duration: duration / 1000,
        ease: "linear",
      }}
    >
      {/* Rocket */}
      <img
        src="/rocket.png"
        className="w-16 h-16 rotate-[-15deg]"
        alt="rocket"
      />

      {/* Cloth */}
      <motion.div
        className="ml-2 px-6 py-3 bg-black/80 text-white rounded-r-full shadow-lg whitespace-nowrap"
        animate={{
          y: [0, -3, 3, -2, 2, 0],
        }}
        transition={{
          duration: 1,
          repeat: Infinity,
          ease: "easeInOut",
        }}
      >
        {message}
      </motion.div>
    </motion.div>
  );
}

